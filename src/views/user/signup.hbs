<h1 class="text-white display-5 text-center mt-3">Formulario de Registro</h1>
<form class="col-12 col-md-4 mx-auto" action="/signup" method="POST">
  <div class="form-group">
    <input type="text" class="form-control" name="name"  placeholder="Nombre" value="{{name}}">
  </div>
  <div class="form-group">
    <input type="email" class="form-control" name="email"  placeholder="E-mail" value="{{email}} ">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password"  placeholder="password" value="{{password}}">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="confirm_password"  placeholder="password">
  </div>
  
 

<h1 class="text-white display-5 text-center mt-3">Crea un nueva nota</h1>


<form class="col-12 col-md-6 mx-auto" action="/notes/new-note" method="POST">
  <div class="form-group">
    {{!-- <label for="title">Titulo</label> --}}
    <input type="text" name="title" class="form-control" id="title" placeholder="Titulo" autofocus >
  </div>

    {{!-- <label for="note">Nota</label> --}}
    <textarea type="text" name="content" class="form-control" id="nota" placeholder="Nota"></textarea>
  </div>

  <button type="submit" class="btn btn-primary btn-lg d-block mx-auto text-white mt-4">Guardar</button>
</form>
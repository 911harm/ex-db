<div class="col-md-4 mx-auto mt-4">
    <div class="card">
    <div class="card-header card-title">Edita la nota</div>
        <form class="form-group card-body" action="/notes/edit/{{note._id}}?_method=PUT" method="POST" >
            <input  type="hidden" name="_method" value="PUT">
            <input class="form-control mb-4" type="text" name="title" value="{{note.title}}">
            <textarea class="form-control mb-4" name="content">{{note.content}}</textarea>
            <button type="submit" class="btn btn-primary btn-block">Guardar</button>
        </form>
    </div>
</div>